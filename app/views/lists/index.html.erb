<%= cl_image_tag("homepage_bckgrnd",
      width: 700, height: 500, crop: :fill) %>
<div class="container py-5">

  <div class="d-flex align-items-center justify-content-between mb-3">
  </div>
  <div class="row">
    <div class = "card-group">
      <% @lists.each do |list| %>
          <div class="co-12 col-sm-6 col-md-4 mb-3">
            <%= link_to list_path(list) do %>
              <div class="card">
                <%= list.name %>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
